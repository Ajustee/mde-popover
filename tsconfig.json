{
  "compilerOptions": {
    "target": "es2015",
    "lib": [ "es2018", "dom" ],
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": [ "node_modules/@types" ],

    "baseUrl": ".",

    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  },
  "exclude": [ "scripts" ]
}
